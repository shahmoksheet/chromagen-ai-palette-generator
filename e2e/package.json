{
  "name": "chromagen-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end and integration tests for ChromaGen",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:visual": "playwright test --grep=\"visual regression\"",
    "test:accessibility": "playwright test --grep=\"accessibility\"",
    "test:load": "artillery run load-tests/api-load-test.yml",
    "test:db": "jest --config jest.config.js",
    "report": "playwright show-report",
    "install-browsers": "playwright install"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "artillery": "^2.0.3",
    "jest": "^29.7.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "pg": "^8.11.3",
    "prisma": "^5.6.0",
    "@prisma/client": "^5.6.0",
    "canvas": "^2.11.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/pg": "^8.10.9",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.4",
    "@types/node": "^20.9.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}